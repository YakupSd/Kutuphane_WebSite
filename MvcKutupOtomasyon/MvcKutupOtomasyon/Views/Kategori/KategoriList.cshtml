@using MvcKutupOtomasyon.Models.Model
@model IEnumerable<MvcKutupOtomasyon.Models.Model.Kategori>
@{
    ViewBag.Title = "KategoriList";
    Layout = "~/Views/Shared/giris_Layout.cshtml";
}
<br />
<br />
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AD)</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.AD
                </td>
                <td>
                    <a href="/Kategori/KategoriList/@item.KategoriID" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "order": [[3, "desc"]]
        });
    });
</script>
<br />
<a href="/Kitap/KitapEkle/" class="btn btn-dark">Geri dön</a>